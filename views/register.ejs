<%- include('./partials/header') %>

<main class="#ffebee red lighten-5">
    <div class="big-container">
        <div class="row ">
            <form class="col s12" action="/register" method="POST">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="first_name" type="text" name="firstName" class="validate ">
                        <label for="first_name">First Name</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="last_name" type="text" name="lastName" class="validate">
                        <label for="last_name">Last Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email"  name="username" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="text" name="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <button type="submit" class="waves-effect waves-light btn #ff5252 red accent-2">Register</button>
                <a role="button" href="/auth/google" class="waves-effect waves-light btn #ff5252 red accent-2"><i
                        class="fa fa-brands fa-google"></i> Register with google</a>
            </form>
        </div>
    </div>
</main>

<%- include('./partials/footer') %>